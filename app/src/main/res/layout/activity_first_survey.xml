<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.privateex.pandorasurvey.FirstSurvey">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            android:focusable="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="35dp"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="@color/white"
                android:layout_margin="10dp"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgLucerne"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/pandoralogowhite"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" />

                <LinearLayout
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:id="@+id/layout"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/inputMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:visibility="visible"
                        android:id="@+id/imgName"
                        android:background="@drawable/ic_person_black_24dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:fontFamily="@font/pantext_tt_bold"
                        android:textSize="30dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="20.5dp"
                        style="@style/Hyperlink"/>

                    <CheckBox
                        android:layout_marginTop="10dp"
                        android:id="@+id/chckMs"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pantext_tt_light"
                        android:text="MS."
                        android:buttonTint="@color/checkbox_filter_tint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>

                    <CheckBox
                        android:layout_marginTop="10dp"
                        android:id="@+id/chckMrs"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pantext_tt_light"
                        android:text="MRS."
                        android:buttonTint="@color/checkbox_filter_tint"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:layout_marginTop="10dp"
                        android:id="@+id/chckMr"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pantext_tt_light"
                        android:buttonTint="@color/checkbox_filter_tint"
                        android:text="MR."
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TextInputLayout
                        android:theme="@style/TextInputLayoutAppearance"
                        android:visibility="visible"
                        android:id="@+id/inputFirst"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edtFirstName"
                            android:typeface="serif"
                            android:hint="FIRST"
                            android:fontFamily="@font/pantext_tt_light"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:textSize="25sp"
                            android:digits="@string/charset"
                            android:inputType="textCapWords|text"
                            android:imeOptions="actionDone"
                            android:backgroundTint="@color/richpink"
                            android:textColorHint="@color/whiteGray"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TextInputLayout
                        android:theme="@style/TextInputLayoutAppearance"
                        android:visibility="visible"
                        android:id="@+id/inputMI"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edtMiddleInitial"
                            android:typeface="serif"
                            android:hint="M.I."
                            android:fontFamily="@font/pantext_tt_light"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:textSize="25sp"
                            android:digits="@string/charset"
                            android:inputType="textCapWords|text"
                            android:imeOptions="actionDone"
                            android:backgroundTint="@color/richpink"
                            android:textColorHint="@color/whiteGray"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:theme="@style/TextInputLayoutAppearance"
                        android:visibility="visible"
                        android:id="@+id/inputLast"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edtLastName"
                            android:typeface="serif"
                            android:imeOptions="actionDone"
                            android:textSize="25sp"
                            android:singleLine="true"
                            android:digits="@string/charset"
                            android:inputType="textCapWords|text"
                            android:textColorHint="@color/whiteGray"
                            android:backgroundTint="@color/richpink"
                            android:hint="LAST"
                            android:fontFamily="@font/pantext_tt_light"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/imgEmail"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_email_black_24dp"
                    android:layout_below="@+id/layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/EmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMAIL"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pantext_tt_bold"
                    android:layout_below="@+id/layout"
                    style="@style/Hyperlink"
                    android:layout_marginLeft="108dp"
                    android:layout_marginTop="30dp"
                    />

                <android.support.design.widget.TextInputLayout
                    android:theme="@style/TextInputLayoutAppearance"
                    android:visibility="visible"
                    android:id="@+id/inputEmail"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_below="@+id/layout"
                    android:layout_toRightOf="@+id/EmailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtEmail"
                        android:typeface="serif"
                        android:textSize="25sp"
                        android:textColorHint="@color/whiteGray"
                        android:backgroundTint="@color/richpink"
                        android:hint="juandelacruz@sample.com"
                        android:fontFamily="@font/pantext_tt_light"
                        android:digits="0123456789@.,_qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionDone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/imgPhone"
                    android:background="@drawable/ic_phone_black_24dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="80dp"
                    android:layout_width="50dp"
                    android:layout_below="@+id/imgLucerne"
                    android:layout_height="50dp"/>

                <TextView
                    android:id="@+id/mobileText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOBILE PHONE"
                    android:textSize="30dp"
                    android:fontFamily="@font/pantext_tt_bold"
                    android:textColor="@color/black"
                    android:layout_below="@+id/imgLucerne"
                    android:layout_toRightOf="@+id/imgPhone"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="20.5dp"
                    style="@style/Hyperlink" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_marginLeft="20.5dp"
                    android:layout_marginTop="80dp"
                    android:layout_below="@+id/imgLucerne"
                    android:layout_toRightOf="@+id/mobileText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/countryCodePicker"
                    app:ccp_defaultNameCode="PH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                </android.support.v7.widget.CardView>

                <android.support.design.widget.TextInputLayout
                    android:theme="@style/TextInputLayoutAppearance"
                    android:visibility="visible"
                    android:id="@+id/inputMobile"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="65dp"
                    android:layout_below="@+id/imgLucerne"
                    android:layout_toRightOf="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtMobile"
                        android:typeface="serif"
                        android:textSize="25sp"
                        android:textColorHint="@color/whiteGray"
                        android:backgroundTint="@color/richpink"
                        android:hint="000-000-0000"
                        android:fontFamily="@font/pantext_tt_light"
                        android:singleLine="true"
                        android:maxLength="12"
                        android:layout_width="match_parent"
                        android:inputType="phone|number"
                        android:imeOptions="actionDone"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:visibility="visible"
                    android:background="@drawable/ic_perm_contact_calendar_black_24dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="35dp"
                    android:id="@+id/imgBirth"
                    android:layout_below="@+id/imgEmail"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/BirthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIRTHDATE"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    style="@style/Hyperlink"
                    android:fontFamily="@font/pantext_tt_bold"
                    android:layout_below="@+id/EmailText"
                    android:layout_marginLeft="108dp"
                    android:layout_marginTop="40dp"/>

                <android.support.design.widget.TextInputLayout
                    android:theme="@style/TextInputLayoutAppearance"
                    android:visibility="visible"
                    android:id="@+id/inputDate"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/inputEmail"
                    android:layout_toRightOf="@+id/BirthText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp">

                    <android.support.design.widget.TextInputEditText
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:id="@+id/edtBirthDate"
                        android:typeface="serif"
                        android:clickable="true"
                        android:editable="false"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:textSize="25sp"
                        android:textColor="@color/richpink"
                        android:textColorHint="@color/whiteGray"
                        android:backgroundTint="@color/richpink"
                        android:hint="Click here to pick a Birth Date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btnSubmit"
                    style="@style/ButtonBorder.RichPink"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:text="SUBMIT INFORMATION"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnConfirm"
                    style="@style/ButtonBorder.RichPink"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/btnSubmit"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp"
                    android:text="CONFIRM"
                    android:textStyle="bold"
                    android:typeface="serif" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        style="@style/ButtonBorder.AccentBlack"
        android:id="@+id/imgLucerne1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/pandora_logo"
        android:background="@color/white"
        android:layout_width="280dp"
        android:layout_height="115dp"/>

</RelativeLayout>
